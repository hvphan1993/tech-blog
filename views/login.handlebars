
<form class="login-form">
  <div>
    <label for="username-login">username:</label>
    <input type="text" id="username-login" class="form-input" autofocus="true" />
  </div>
  <div>
    <label for="password-login">password:</label>
    <input type="password" id="password-login" class="form-input" autofocus="true" />
  </div>
  <div>
    <button type="submit">login</button>
  </div>
</form>

<form class="signup-form">
  <div>
    <label for="username-signup">username:</label>
    <input type="text" id="username-signup" class="form-input" />
  </div>
  <div>
    <label for="password-signup">password:</label>
    <input type="password" id="password-signup" class="form-input" />
  </div>
  <div>
    <button type="submit">signup</button>
  </div>
</form>

<script src="/javascript/login.js"></script>
<script src="/javascript/signup.js"></script>