{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> dashboard-postinfo post}}
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<button type="submit" class="btn-no-style"><a class="link" href="/dashboard/add">Add New Post</a></button>

<script src="/javascript/add-post.js"></script>