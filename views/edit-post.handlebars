<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title" class="form-label">Title</label>
      <input name="post-title" type="text" value="{{post.title}}" class="form-input" />
      <label for="content" class="form-label">Content</label>
      <input name="content" type="text" value="{{post.content}}" class="form-input" />
    </div>
    <div>
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn">Save post</button>
    <button type="button" class="delete-post-btn btn">Delete Post</button>
  </form>
</article>

<form class="comment-form">
    <div>
      <label for="comment" class="form-label">Add a Comment</label>
      <textarea name="comment-body" class="form-input"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>